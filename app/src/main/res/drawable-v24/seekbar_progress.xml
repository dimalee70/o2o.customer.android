<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:id="@android:id/secondaryProgress"
            android:top="1dp"
            android:bottom="1dp"
            android:right="1dp"
            android:left="1dp">
        <clip>
            <shape
                    android:shape="rectangle">
                <corners
                        android:radius="3dp"
                        android:bottomRightRadius="0dp"
                        android:topRightRadius="0dp"/>
                <solid android:color="@color/greenTextColor"/>
                <stroke android:color="@color/lightGrayTextColor"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp"/>
            <stroke
                    android:color="@color/lightGrayTextColor"
                    android:width="1dp"/>
        </shape>
    </item>
</layer-list>